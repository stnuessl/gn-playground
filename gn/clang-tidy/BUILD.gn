import("//gn/python/python.gni")
import("//gn/vars.gni")

group("clang-tidy") {
  testonly = true
  deps = [
    "//src:clang-tidy-app",
    "//src:clang-tidy-core",
    "//src:clang-tidy-drivers",
    "//src:clang-tidy-io",
    "//src:clang-tidy-utils",
    "//test:clang-tidy-unittest-core",
    "//test:clang-tidy-unittest-drivers",
    "//test:clang-tidy-unittest-init",
    "//test:clang-tidy-unittest-io",
    "//test:clang-tidy-unittest-main",
    "//test:clang-tidy-unittest-utils",
  ]
}

python("check-clang-tidy") {
  testonly = true
  deps = [ description.target ]
  inputs = description.outputs
  outputs = [ "$target_gen_dir/$target_name.non-existant" ]
  mnemonic = "CHECK"

  env = [ "PYTHONPATH=" + rebase_path("//gn/python/packages", root_build_dir) ]
  script = "//gn/python/scripts/check-description-target.py"
  args = [
    "--description",
    rebase_path(inputs[0], root_build_dir),
    "--target",
    "//gn/clang-tidy:clang-tidy",
  ]
}
