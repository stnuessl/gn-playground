# Always use a list to represent outputs to make it easier for other
# targets to use them.

ack = {
  target = "//gn/ack:ack"
  outputs = [ "$root_build_dir/gn.ack" ]
}

dependencies = {
  target = "//gn/dependencies:dependencies"
  outputs = [ "$root_gen_dir/dependencies.json" ]
}

description = {
  target = "//gn/description:description"
  outputs = [ "$root_gen_dir/description.json" ]
}

metadata = {
  target = "//gn/metadata:metadata"
  outputs = [ "$root_gen_dir/metadata.json" ]
}
